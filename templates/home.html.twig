{% extends 'base.html.twig' %}

{% block body %}
	{% for clef, article in articles %}
		<div class="card text-left mb-4">
			<div class="card-body">
				<h4 class="card-title">{{ article.titre }}</h4>
				<p class="card-text">{{ article.contenu}}</p>
			</div>

			<div class="card-footer">
				<a name="" id="" class="btn btn-primary" href="details.php?clef={{ clef }}" role="button">
					<i class="fa fa-eye" aria-hidden="true"></i>
				</a>
				<a name="" id="" class="btn btn-warning" href="modifier.php?clef={{ clef }}" role="button">
					<i class="fa fa-pencil" aria-hidden="true"></i>
				</a>
				<a name="" id="" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir continuer ?')" href="supprimer.php?clef={{ clef }}" role="button">
					<i class="fa fa-trash" aria-hidden="true"></i>
				</a>
			</div>
		</div>
	{% endfor %}
{% endblock %}
